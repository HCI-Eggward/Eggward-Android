<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyPets.MyPetDetailActivity">

    <TextView
        android:id="@+id/petName"
        android:layout_width="133dp"
        android:layout_height="74dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_title_box"
        android:gravity="bottom|start"
        android:text="펫 이름"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petLevel"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="220dp"
        android:text="Lv.2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pet_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="100dp"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pet_progressDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="0/100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_progressBar" />

    <TextView
        android:id="@+id/pet_textbox"
        android:layout_width="357dp"
        android:layout_height="81dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/egg_textbox_yellow"
        android:gravity="center"
        android:text="나 요즘은 나무를\n제법 잘 탈 수 있게 됐어!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_progressBar" />

    <ImageView
        android:id="@+id/pet_imageView"
        android:layout_width="241dp"
        android:layout_height="226dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_textbox"
        app:srcCompat="@drawable/pet_choala" />

    <ImageView
        android:id="@+id/pet_happy_imageView"
        android:layout_width="241dp"
        android:layout_height="226dp"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_textbox"
        app:srcCompat="@drawable/pet_choala_happy" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:onClick="changePetImage"
        app:itemIconTint="@drawable/nav_menu_selector"
        app:itemTextColor="@drawable/nav_menu_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/item1"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pet_item1" />

    <ImageButton
        android:id="@+id/item2"
        android:layout_width="111dp"
        android:layout_height="92dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="40dp"
        android:onClick="changePetImage"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toStartOf="@+id/item3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item1"
        app:srcCompat="@drawable/pet_item2" />

    <ImageView
        android:id="@+id/item3"
        android:layout_width="102dp"
        android:layout_height="78dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pet_item3" />

    <ImageView
        android:id="@+id/countBackground_item1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/item2"
        app:layout_constraintTop_toBottomOf="@+id/pet_textbox"
        app:srcCompat="@drawable/petitem_count" />

    <ImageView
        android:id="@+id/countBackground_item2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/item3"
        app:layout_constraintTop_toBottomOf="@+id/pet_textbox"
        app:srcCompat="@drawable/petitem_count" />

    <ImageView
        android:id="@+id/countBackground_item3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_textbox"
        app:srcCompat="@drawable/petitem_count" />

    <TextView
        android:id="@+id/count_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="5"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/countBackground_item1"
        app:layout_constraintTop_toTopOf="@+id/countBackground_item1" />

    <TextView
        android:id="@+id/count_item2"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="5"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/countBackground_item2"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="@+id/countBackground_item2"
        app:layout_constraintTop_toTopOf="@+id/countBackground_item2" />

    <TextView
        android:id="@+id/count_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:text="5"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/countBackground_item3"
        app:layout_constraintTop_toTopOf="@+id/countBackground_item3" />


</androidx.constraintlayout.widget.ConstraintLayout>